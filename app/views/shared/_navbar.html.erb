<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%=root_path%>">
      <%= image_tag "solstice_logo.jpg" %>
    </a>

    <!-- Check Session / Current Order
    <div class="session-info" data-controller="test">
        <p>Order ID :<%= current_order.id %> </p>
        <p>Session ID :<%= session.id %></p>
    </div>-->

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

        <% if current_user.present? && current_user.admin %>
          <li>
            <a class="nav-link admin-btn" href="<%= admin_path %>"><i class="fa-solid fa-gear"></i> Admin</a>
          </li>
        <% end %>

        <li class="nav-item <%= 'active' if controller_name == 'shop' && action_name == 'index' %>">
          <a class="nav-link" href="<%= creations_path %>"><i class="fa-solid fa-store"></i> Boutique</a>
        </li>

        <li class="nav-item <%= 'active' if controller_name == 'polygons' && action_name == 'show' %>">
          <a class="nav-link" href="<%= polygon_path(Polygon.last) %>"><i class="fa-solid fa-truck"></i> Livraison</a>
        </li>

        <div class="cart-navbar" data-controller="cart-display">
          <li class="nav-item <%= 'active' if controller_name == 'cart' && action_name == 'show' %>">
            <a class="nav-link" data-action="mouseenter->cart-display#showCart mouseleave->cart-display#hideCart" href="<%= panier_path %>"><i class="fa-solid fa-cart-shopping"></i> Panier</a>
          </li>
          <!-- Pop Up Cart Content-->
          <div class="cart-content" style="display: none" data-cart-display-target="cartContent">
            <% if current_order.order_items.size === 0  %>
              <p>Votre panier est vide üôÅ</p>
            <% else %>
              <% current_order.order_items.each do |order_item| %>
                <div class="cart-content-item">
                  <img src="<%= cl_image_path order_item.product.photos.first.key %>" alt="">
                  <div class="cart-content-item-info">
                    <p class="fw-bolder"><%= order_item.product.name  %></p>
                    <p><%= humanized_money_with_symbol(order_item.price) %></p>
                  </div>
                </div>
              <% end %>
              <div class="order-total">
                <p>Total : <%= humanized_money_with_symbol(current_order.total) %></p>
              </div>
            <% end %>
          </div>

        </div>
        <li class="nav-item dropdown">
        <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= image_tag "avatar.png", class: "avatar", alt: "dropdown menu" %>
        </a>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <p class="font-weight-bold">Bonjour <%= current_user.first_name %> !</p>
              <a class="dropdown-item" href="<%= compte_path %>">Mon compte</a>
            <% end %>
            <a class="dropdown-item" href="<%= user_session_path %>">Me connecter</a>
            <a class="dropdown-item" href="<%= new_user_registration_path %>">Cr√©er un compte</a>
            <a class="dropdown-item" data-turbo-method="delete" href="<%= destroy_user_session_path %>">Me d√©connecter</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
