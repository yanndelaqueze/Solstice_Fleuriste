<h1 class= "title"><%= @category.name %></h1>
<div class="container">

  <!-- Create New Product-->
  <%= link_to "Ajouter un Produit", new_product_path, class:"btn-action"%>

  <!-- Display Products-->
  <div class="products-container pt-3">
    <% @products.each do |product| %>
      <%= render 'products/card_product', product: product%>
    <% end %>
  </div>
</div>
