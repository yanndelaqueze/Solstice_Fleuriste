<p>Commande <%= @order.id  %></p>

<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_path @order_items.first.product.photos.first.key %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.status %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.total %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
