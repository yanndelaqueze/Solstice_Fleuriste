<h1 class= "title">Nouveau Produit</h1>
<div class="container">
  <%= form_with(model: @product, url: products_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nom du produit" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :min_price, "Prix Minimum" %>
      <%= form.number_field :min_price %>
    </div>
    <div class="form-group">
      <%= form.label :available, "Disponible ?" %>
      <%= form.check_box :available %>
    </div>
    <div class="form-group">
      <%= form.label :position, "Position" %>
      <%= form.number_field :position %>
    </div>
    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, @categories, :id, :name, prompt: 'Select a category' %>
    </div>
    <div class="actions">
      <%= form.submit "CrÃ©er", class:"btn-action" %>
    </div>
  <% end %>
</div>
